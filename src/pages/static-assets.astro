---
import Feedback from "../components/feedback.astro";
import BaseLayout from "../layouts/base.astro";

export const prerender = true; // Static site generation
---

<BaseLayout>
  <section slot="overview">
    <h2>Static Assets from `public` folder</h2>
    <p>This pages assets are served from the `public` folder.</p>
  </section>

  <section class="assets">
    <img src="/cute_cat.jpg" alt="Cute Cat" width="400" />

    <a href="/example.js">Example JS Asset</a>
    <a href="/example.css">Example CSS Asset</a>
  </section>

  <Feedback
    good={["The asset (image, css or js) is served!"]}
    warning={[
      "The Asset's default `Cache-Control` headers are `public, max-age=0`. The Headless Platform boosts the TTL to `max-age=10`. Meaning little caching is happening on this static asset from the `public` folder.",
    ]}
    bad={[]}
  />

  <style>
    .assets {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    img {
      border-radius: 8px;
    }
  </style>
</BaseLayout>
